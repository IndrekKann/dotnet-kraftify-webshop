<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kräftify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kräftify</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Resources.Views.Shared._Layout.Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">@Resources.Views.Shared._Layout.Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingCarts" asp-action="Index">@Resources.Views.Shared._Layout.ShoppingCarts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@Resources.Views.Shared._Layout.Privacy</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @Resources.Views.Shared._Layout.Admin
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                    <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Payments" asp-action="Index">@Resources.Views.Shared._Layout.Payments</a>
                                    <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Products" asp-action="Index">@Resources.Views.Shared._Layout.Products</a>
                                    <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="ProductTypes" asp-action="Index">@Resources.Views.Shared._Layout.ProductTypes</a>
                                    <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Prices" asp-action="Index">@Resources.Views.Shared._Layout.Prices</a>
                                    <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="ShoppingCarts" asp-action="Index">@Resources.Views.Shared._Layout.ShoppingCarts</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="LangStrs" asp-action="Index">LangStrs</a>
                                    <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="LangStrTranslations" asp-action="Index">LangStrTranslations</a>
                                </div>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Kräftify - <a asp-area="" asp-controller="Home" asp-action="Privacy">@Resources.Views.Shared._Layout.Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
