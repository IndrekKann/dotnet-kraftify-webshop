@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@Resources.Areas.Identity.Pages.Account.Manage.ForgotPassword.ForgotYourPassword</h1>
<h4>@Resources.Areas.Identity.Pages.Account.Manage.ForgotPassword.EnterYourEmail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Resources.Areas.Identity.Pages.Account.Manage.ForgotPassword.Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
