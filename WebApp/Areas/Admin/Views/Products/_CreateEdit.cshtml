@model WebApp.Areas.Admin.ViewModels.ProductCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Product!.Name" class="control-label"></label>
    <input asp-for="Product!.Name" class="form-control" />
    <span asp-validation-for="Product!.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Product!.ProductTypeId" class="control-label"></label>
    <select asp-for="Product!.ProductTypeId" class="form-control" asp-items="Model.ProductTypeSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Product!.Description" class="control-label"></label>
    <input asp-for="Product!.Description" class="form-control" />
    <span asp-validation-for="Product!.Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Product!.PriceId" class="control-label"></label>
    <select asp-for="Product!.PriceId" class="form-control" asp-items="Model.PriceSelectList"></select>
</div>

<div class="form-group">
    <label asp-for="Product!.Image" class="control-label"></label>
    <div>
        <input asp-for="Image" accept="image/png"/>
        <label class="custon-file-label">@Resources.Views.Products.ChooseFile</label>
    </div>
</div>

@section scripts{  
    <script type="text/javascript">  
        $(".custom-file-input").on("change", function () {  
            let fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
    </script>
}
