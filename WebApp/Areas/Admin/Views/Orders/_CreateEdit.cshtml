@model WebApp.Areas.Admin.ViewModels.OrderCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Order!.ShoppingCartId" class="control-label"></label>
    <select asp-for="Order!.ShoppingCartId" class="form-control" asp-items="Model.ShoppingCartSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Order!.OrderNumber" class="control-label"></label>
    <input asp-for="Order!.OrderNumber" class="form-control" />
    <span asp-validation-for="Order!.OrderNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Order!.Date" class="control-label"></label>
    <input asp-for="Order!.Date" class="form-control" />
    <span asp-validation-for="Order!.Date" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Order!.TotalCost" class="control-label"></label>
    <input asp-for="Order!.TotalCost" class="form-control" />
    <span asp-validation-for="Order!.TotalCost" class="text-danger"></span>
</div>
