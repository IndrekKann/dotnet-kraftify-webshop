@model WebApp.Areas.Admin.ViewModels.PaymentCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Payment!.PaymentTypeId" class="control-label"></label>
    <select asp-for="Payment!.PaymentTypeId" class="form-control" asp-items="Model.PaymentTypeSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Payment!.OrderId" class="control-label"></label>
    <select asp-for="Payment!.OrderId" class="form-control" asp-items="Model.OrderSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Payment!.DestinationId" class="control-label"></label>
    <select asp-for="Payment!.DestinationId" class="form-control" asp-items="Model.DestinationSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Payment!.Date" class="control-label"></label>
    <input asp-for="Payment!.Date" class="form-control" />
    <span asp-validation-for="Payment!.Date" class="text-danger"></span>
</div>
